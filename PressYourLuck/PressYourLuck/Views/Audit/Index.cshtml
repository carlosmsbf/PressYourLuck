@model List<Audit>

<h1 class="display-4">Audit Record</h1>

<nav>
    <div class="container">
        <ul class="nav nav-fill nav-tabs">
            <li class="nav-item ">
                <a class="@ViewBag.All" asp-route-query="all" asp-action="Index">All</a>
            </li>
            <li class="nav-item">
                <a class="@ViewBag.CashIn" asp-action="Index" asp-route-query="Cash In">Cash In</a>
            </li>
            <li class="nav-item">
                <a class="@ViewBag.CashOut" asp-action="Index" asp-route-query="Cash Out">Cash Out</a>
            </li>
            <li class="nav-item">
                <a class="@ViewBag.Lose" asp-action="Index" asp-route-query="Lose">Lose</a>
            </li>
            <li class="nav-item">
                <a class="@ViewBag.Win" asp-action="Index" asp-route-query="Win">Win</a>
            </li>
        </ul>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <th>Created</th>
            <th>Player Name</th>
            <th>Audit Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Audit record in Model)
        {
            if (record.auditTypes.Name == "Lose") { 
                record.Amount = ((record.Amount) *(- 1));
                }
            <tr>

                <td>@record.CreatedDate</td>
                <td>@record.Name</td>
                <td>@record.auditTypes.Name</td>
                <td>@record.Amount.ToString("C2")</td>
            </tr>
        }
    </tbody>
</table>


