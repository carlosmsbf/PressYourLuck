@model PlayerBet


@{
    var personName = Context.Request.Cookies["player-name"];
}
<h1 class="display-4">Welcome, @personName!</h1>

<p style="margin-top:50px;">How many coins would you like to wager?</p>
<form asp-controller="Home" asp-action="Index" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentBet">Current Bet:</label>
        <input type="text" asp-for="CurrentBet" class="form-control" style="width:300px;" />
    </div>

    <input type="submit" class="btn btn-primary" value="Start Playing!" />
</form>